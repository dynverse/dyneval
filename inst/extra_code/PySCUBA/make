#!/bin/bash
install_dir="$1"
if [ ! -d $install_dir ]; then
  mkdir $install_dir
  module load python/x86_64/3.5.1
  virtualenv -p python3 $install_dir --system-site-packages
  cd $install_dir
  source bin/activate
  pip install git+https://github.com/Zouter/PySCUBA.git # first install without upgrade of dependencies
  pip install git+https://github.com/Zouter/PySCUBA.git --upgrade --no-dependencies --no-cache-dir -U # now upgrade PySCUBA :p
fi
